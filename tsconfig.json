{
  "files": [],
  "compilerOptions": {
    "jsx": "react-jsx", 
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@main/*": [
        "src/main/*"
      ]
    },
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "references": [{ "path": "./tsconfig.node.json" }, { "path": "./tsconfig.web.json" }],
}
